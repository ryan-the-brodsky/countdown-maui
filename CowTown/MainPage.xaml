<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CowTown.MainPage">

    <ScrollView>
        <StackLayout
            Spacing="25"
            Padding="30,0"
            >

            <Label
                Text="Letter Challenge"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                x:Name="SubmitWordBtn"
                Text="Submit Word"
                SemanticProperties.Hint="Adds your current word to your submissions"
                HorizontalOptions="Center" />
           <HorizontalStackLayout
                x:Name="ChosenLettersGrid"
               HorizontalOptions="Center">
            </HorizontalStackLayout>
            <HorizontalStackLayout
                x:Name="EligibleLettersGrid"
                >
            </HorizontalStackLayout>
         </StackLayout>
    </ScrollView>

</ContentPage>

